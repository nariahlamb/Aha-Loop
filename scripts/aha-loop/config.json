{
  "version": 3,
  "orchestrator": {
    "enabled": true,
    "autoStart": true,
    "pauseOnMilestone": false,
    "maxPRDsPerRun": 10,
    "reviewRoadmapAfterMilestone": true
  },
  "vision": {
    "requireAllSections": false,
    "autoAnalyze": true,
    "useVisionBuilder": true
  },
  "architect": {
    "preferLatestVersions": true,
    "researchDepth": "deep",
    "recordAllDecisions": true,
    "compareMinimumOptions": 2
  },
  "roadmap": {
    "autoAdjust": true,
    "maxMilestones": 5,
    "maxPRDsPerMilestone": 7,
    "generatePRDStubs": true
  },
  "phases": {
    "research": {
      "enabled": true,
      "depth": "deep",
      "fetchSourceCode": true,
      "skipIfNoTopics": true,
      "preferLatestVersions": true
    },
    "exploration": {
      "enabled": true,
      "skipIfNoTopics": true,
      "maxWaitSeconds": 3600,
      "autoEvaluate": true,
      "autoMerge": false
    },
    "planReview": {
      "enabled": true,
      "autoApply": true,
      "requireReason": true
    },
    "qualityReview": {
      "enabled": true,
      "runTests": true,
      "runLint": true,
      "runTypecheck": true
    }
  },
  "parallelExploration": {
    "enabled": true,
    "worktreePath": ".worktrees",
    "maxConcurrent": 10,
    "unlimitedMode": true,
    "autoCleanup": true,
    "evaluationAgents": 3,
    "allowNestedExploration": true
  },
  "observability": {
    "enabled": true,
    "logPath": "logs/ai-thoughts.md",
    "logLevel": "detailed",
    "logThoughts": true,
    "logDecisions": true,
    "logProgress": true
  },
  "resources": {
    "docker": {
      "enabled": true,
      "autoCleanup": true
    },
    "network": {
      "enabled": true,
      "allowExternalRequests": true
    },
    "filesystem": {
      "fullAccess": true
    },
    "unlimitedCompute": true
  },
  "skillManagement": {
    "enabled": true,
    "autoCreate": true,
    "autoUpdate": true,
    "reviewCycle": "milestone",
    "trackUsage": true
  },
  "docMaintenance": {
    "enabled": true,
    "cleanupCycle": "milestone",
    "maxStaleDays": 30,
    "checkLinksOnReview": true,
    "checkRefsOnReview": true,
    "autoFix": false
  },
  "knowledge": {
    "projectPath": "./knowledge/project",
    "domainPath": "./knowledge/domain",
    "updateOnLearning": true,
    "recordADRs": true
  },
  "vendor": {
    "enabled": true,
    "path": "./.vendor",
    "maxSizeMB": 500,
    "shallowClone": true,
    "autoCleanupDays": 30
  },
  "safeguards": {
    "maxStoriesPerRun": 20,
    "maxIterationsPerStory": 3,
    "requireTestsForNewCode": false,
    "blockOnLintErrors": true,
    "blockOnTypeErrors": true,
    "backupBeforePlanChange": true,
    "backupBeforeArchitectureChange": true
  },
  "git": {
    "autoCommit": true,
    "commitMessagePrefix": "feat",
    "createBranchIfMissing": true
  },
  "mindset": {
    "unlimitedResources": true,
    "neverGiveUp": true,
    "exploreAllOptions": true,
    "documentEverything": true
  }
}
